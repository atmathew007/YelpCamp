<% include ../partials/header %>
<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center">Edit <%= camp.name %></h1>
        <div style = "width: 30%; margin: 0 auto;">
            <form action = "/camps/<%= camp._id %>?_method=put" method = "post">
                <div class = "form-group">
                    <input type = "text" name = "name" value = "<%=camp.name %>" class = "form-control">
                </div>
                <div class = "form-group">
                    <input type = "number" name = "price" value = "<%=camp.price%>" class = "form-control" min = "0.01" step = "0.01">
                </div>
                <div class = "form-group">   
                    <input type = "text" name = "image" value = "<%=camp.image%>" class = "form-control">
                </div>
                <div class = "form-group">   
                    <input type = "text" name = "location" value = "<%=camp.location%>" class = "form-control">
                </div>
                <div class = "form-group">   
                    <input type = "text" name = "description" value = "<%=camp.description%>" class = "form-control">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href = "/camps/<%= camp._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>