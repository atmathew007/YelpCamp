<% include ../partials/header %>

<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome to YelpCamp</h1>
            <p>
                <a class = "btn btn-primary btn-large " href = "camps/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>
    <div class = "row text-center" style = "display: flex; flex-wrap: wrap;">
        <% camps.forEach(function(camp) {  %>
        <div class = "col-md-3 col-sm-6" >
            <div class = "thumbnail">
                <img src = "<%= camp.image %>">
                <div class = "caption">
                    <h4><%= camp.name %></h4>
                </div>
                <p>
                    <a class = "btn btn-primary" href = "/camps/<%= camp._id %>">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>